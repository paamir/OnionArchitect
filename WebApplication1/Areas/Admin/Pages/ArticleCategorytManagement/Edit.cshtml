@page
@model WebApplication1.Areas.Admin.Pages.ArticleCategorytManagement.EditModel
@{
}
<div class="card">
    <div class="card-header">
        <h2>Edit Article Category: @Model._ArticleCategoryUpdate.Title</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="_ArticleCategoryUpdate.Id" />
                    <div class="col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="_ArticleCategoryUpdate.Title" class="control-label">Title:</label>
                            <input asp-for="_ArticleCategoryUpdate.Title" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Edit" class="btn btn-warning" />
                        <a class="btn btn-dark" asp-page="./Index" asp-area="">Back to list</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>